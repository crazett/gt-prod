<%= form_for @gt do |f| %>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :order_date, "Beställningsdatum" %>
                </div>
                <div class="col-6">
                    <%= f.date_field :order_date, class: "form-control" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <% error = "" %>
                    <% error = " is-invalid" if @gt.errors.include?(:deliver_date) %>
                    <%= f.label :deliver_date, "Leveransdatum " + error %>
                </div>
                <div class="col-6">
                    <%= f.date_field :deliver_date, class: "form-control" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :customer_name, "Kund" %>
                </div>
                <div class="col-6">
                    <% error = "" %>
                    <% error = " is-invalid" if @gt.errors.include?(:customer) %>
                    <%= f.text_field :customer_name, list: 'customer-name', class: "form-control", value: @gt.customer.name, :autocomplete => :off if @gt.customer %>
                    <%= f.text_field :customer_name, list: 'customer-name', class: "form-control" + error, :autocomplete => :off if !@gt.customer %>
                    <datalist id="customer-name">
                        <% Customer.all.each do |customer| %>
                        <option value="<%= customer.name %>"></option>
                        <% end %>
                    </datalist>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :ref_num, "Referensnummer" %>
                </div>
                <div class="col-6">
                    <%= f.text_field :ref_num, class: "form-control" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :length, "Längd" %>
                </div>
                <div class="col-6">
                    <%= f.text_field :length, class: "form-control", placeholder: "mm" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :amount, "Antal" %>
                </div>
                <div class="col-6">
                    <%= f.text_field :amount, class: "form-control", placeholder: "st" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :width, "Bredd" %>
                </div>
                <div class="col-6">
                    <%= f.select(:width, Gt::WIDTH_ARRAY, {}, { :class => 'form-control' })%>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :degree, "Vinkel" %>
                </div>
                <div class="col-6">
                    <%= f.text_field :degree, class: "form-control", placeholder: "grader" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :rivet, "Nit" %>
                </div>
                <div class="col-6">
                    <%= f.radio_button :rivet, true, checked: true %> Standard
                    <%= f.radio_button :rivet, false %> M/S
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <hr class="mt-3">
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :under_steel, "Underläggsstål" %>
                </div>
                <div class="col-6">
                    <%= f.radio_button :under_steel, true %> Ja
                    <%= f.radio_button :under_steel, false %> Nej
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :quality, "Athena/Triton" %>
                </div>
                <div class="col-6">
                    <%= f.select(:quality, ["10x0,10mm / Athena", "10x0,15mm / Triton"], {:include_blank => true}, { :class => 'form-control' })%>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :precut_gt, "Precut stål till GT" %>
                </div>
                <div class="col-6">
                    <%= f.radio_button :precut_gt, true %> Ja
                    <%= f.radio_button :precut_gt, false %> Nej
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :precut_extra_steel, "Precut stål extra" %>
                </div>
                <div class="col-6">
                    <%= f.text_field :precut_extra_steel, class: "form-control" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <hr class="mt-3">
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :etching, "Etsning" %>
                </div>
                <div class="col-6">
                    <%= f.text_field :etching, class: "form-control" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :pipe, "Rör" %>
                </div>
                <div class="col-6">
                    <%= f.radio_button :pipe, true %> Ja
                    <%= f.radio_button :pipe, false %> Nej
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :packing, "Packning" %>
                </div>
                <div class="col-6">
                    <%= f.radio_button :packing, true %> Ja
                    <%= f.radio_button :packing, false %> Nej
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :gt_tool, "GT verktyg" %>
                </div>
                <div class="col-6">
                    <%= f.radio_button :gt_tool, true %> Ja
                    <%= f.radio_button :gt_tool, false %> Nej
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :gt_flexo, "GT flexo broschyr" %>
                </div>
                <div class="col-6">
                    <%= f.radio_button :gt_flexo, true %> Ja
                    <%= f.radio_button :gt_flexo, false %> Nej
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :gt_engraving, "GT gravyr broschyr" %>
                </div>
                <div class="col-6">
                    <%= f.radio_button :gt_engraving, true %> Ja
                    <%= f.radio_button :gt_engraving, false %> Nej
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <hr class="mt-3">
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :comment, "Kommentarer" %>
                </div>
                <div class="col-6">
                    <%= f.text_area :comment, class: "form-control" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :worker, "Arbete" %>
                </div>
                <div class="col-6">
                    <%= f.text_field :worker_name, list: 'worker-name', class: "form-control", :autocomplete => :off if Worker.where(id: @gt.worker_id).empty?%>
                    <%= f.text_field :worker_name, list: 'worker-name', class: "form-control", value: Worker.find(@gt.worker_id).name, :autocomplete => :off if Worker.where(id: @gt.worker_id).any? %>
                    <datalist id="worker-name">
                        <% Worker.all.each do |worker| %>
                        <option value="<%= worker.name %>"></option>
                        <% end %>
                    </datalist>
                </div>
            </div>
        </div>
    </div>
    <% if params[:action] == "show" || params[:action] == "update" %>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :done, "Godkänd och leverans klar" %>
                </div>
                <div class="col-6">
                    <%= f.radio_button :done, true %> Ja
                    <%= f.radio_button :done, false %> Nej
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <%= f.label :approver, "Godkännande" %>
                </div>
                <div class="col-6">
                    <%= f.text_field :approver_name, list: 'approve-name', class: "form-control", :autocomplete => :off if Worker.where(id: @gt.approver_id).empty? %>
                    <%= f.text_field :approver_name, list: 'approve-name', class: "form-control", value: Worker.find(@gt.approver_id).name, :autocomplete => :off if Worker.where(id: @gt.approver_id).any? %>
                    <datalist id="approve-name">
                        <% Worker.all.each do |approver| %>
                        <option value="<%= approver.name %>"></option>
                        <% end %>
                    </datalist>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <div class="row">
        <div class="col-3"></div>
        <% if params[:action] == "show" || params[:action] == "update" %>
            <%= f.submit "Spara ändringar", class: "btn btn-primary" %>
        <% end %>
        <% if params[:action] == "new" || params[:action] == "create" %>
            <%= f.submit "Skapa Order", class: "btn btn-primary" %>
        <% end %>
    </div>
<% end %>