<%= link_to "Skapa Kund", new_customer_path(@customer), class: "btn btn-primary" %>
<br><br>
<table class="table table-hover">
    <thead>
        <th>Kund</th>
        <th>Mängd GTs</th>
        <th>Verktyg</th>
    </thead>
    <tbody>
        <% @customers.order(:name).each do |customer| %>
        <tr>
            <td onclick="Turbolinks.visit('<%= customer_path(customer) %>');"><%= customer.name %></td>
            <td onclick="Turbolinks.visit('<%= customer_path(customer) %>');"><%= customer.gts.count %></td>
            <td> <%= link_to 'Delete', customer, :method => :delete, class: "btn btn-danger", data: {confirm: "Är du säker?"} %> </td>
        </tr>
        <% end %>
    </tbody>
</table>